{
  "name": "github-proxy",
  "version": "0.0.1",
  "description": "GitHub proxy on Cloudflare Workers.",
  "main": "dist/index.js",
  "repository": "htttps://github.com/mchaNetwork/github-proxy",
  "author": "mochaaP <npm@mochaa.ws>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@cloudflare/workers-types": "4.20221111.1",
    "@cloudflare/wrangler": "1.20.0",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@size-limit/preset-small-lib": "8.1.2",
    "@tsconfig/recommended": "1.0.1",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "esbuild": "0.16.15",
    "eslint": "8.32.0",
    "eslint-config-standard-with-typescript": "32.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "eslint-plugin-unicorn": "45.0.2",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "prettier": "2.8.3",
    "size-limit": "8.1.2",
    "standard-version": "9.5.0",
    "typescript": "4.9.4"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
      "dist/**/*.js"
    ]
  },
  "scripts": {
    "build": "rimraf dist && esbuild --bundle src/index.ts --minify --sourcemap --outfile=dist/index.js",
    "size": "yarn build && size-limit",
    "lint": "eslint ./src --fix",
    "prerelease": "yarn lint && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags"
  },
  "size-limit": [{
    "path": "dist/index.js"
  }],
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
