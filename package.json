{
  "name": "github-proxy",
  "version": "0.0.1",
  "description": "GitHub proxy on Cloudflare Workers.",
  "main": "dist/index.js",
  "repository": "htttps://github.com/mchaNetwork/github-proxy",
  "author": "mochaaP <npm@mochaa.ws>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@cloudflare/workers-types": "3.2.0",
    "@cloudflare/wrangler": "1.19.12",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@size-limit/preset-small-lib": "7.0.8",
    "@tsconfig/recommended": "1.0.1",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "esbuild": "0.14.42",
    "eslint": "8.16.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-tsdoc": "0.2.16",
    "eslint-plugin-unicorn": "39.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "prettier": "2.6.2",
    "size-limit": "7.0.8",
    "standard-version": "9.3.2",
    "typescript": "4.7.2"
  },
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "plugin:unicorn/recommended"
    ],
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
      "dist/**/*.js"
    ]
  },
  "scripts": {
    "build": "rimraf dist && esbuild --bundle src/index.ts --minify --sourcemap --outfile=dist/index.js",
    "size": "yarn build && size-limit",
    "lint": "eslint ./src --fix",
    "prerelease": "yarn lint && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags"
  },
  "size-limit": [{
    "path": "dist/index.js"
  }],
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
